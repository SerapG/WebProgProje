            </div>
        </div>
        <!-- Slide Two - Set the background image for this slide in the line below -->
        <div class="carousel-item" style="background-image: url('https://cdn.yemek.com/mncrop/500/333/uploads/2017/07/alinazik-tarifi-one-cikan-yeni.jpg')">
            <div class="carousel-caption d-none d-md-block">
                <h3>Second Slide</h3>
                <p>This is a description for the second slide.</p>
            </div>
        </div>
        <!-- Slide Three - Set the background image for this slide in the line below -->
        <div class="carousel-item" style="background-image: url('https://cdn.yemek.com/mncrop/500/333/uploads/2017/07/alinazik-tarifi-one-cikan-yeni.jpg')">
            <div class="carousel-caption d-none d-md-block">
                <h3>Third Slide</h3>
                <p>This is a description for the third slide.</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



<div class="container mt-5">



    <!-- Page Features -->
    <div class="row text-center">
        @model IEnumerable<Recipes.Models.Food>

        <div class="row text-center mt-3">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100 shadow">
                        <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Banner)" alt="">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(modelItem => item.FoodName)</h4>
                            <p class="card-text">@(item.Recipe.Substring(0, 50) + "...")</p>
                        </div>
                        <div class="card-footer">
                            <a href="@("/foods/food/" + item.Id)" class="btn btn-primary">Devamını Gör</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>







</div>
